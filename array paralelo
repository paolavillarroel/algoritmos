#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string>

#define MAX 100

using namespace std;

void cargarvectori(int notas[],int n);
void cargarvectors(string alumnos[],int n);
void burbuja(int notas[],string alumnos[],int n);
void mostrarvectores(int notas[],string alumnos[],int n);

void main()
{
	int n notas[MAX];
	string alumnos [MAX];
	do{
		cout<<"ingrese el tamaÃ±o del vector"<<endl;
		cin>>n;
	  }
	while ((n<=0) || (n>MAX));
	cargarvectors(alumnos,n);
	cargarvectori(notas,n);
	burbuja(notas,alumnos,n);

	getch();
}
void cargarvectori(int notas[],int n)
{
	for (int i=0;i<n;i++)
	{
		cout<<"ingrese la nota del estudiante:";
		cin>> notas[i];
	}
}
void cargarvectors(string alumnos[],int n)
{
	cin.ignore();
	for(int i=0;i<n;i++)
	{
		cout<<"alumnos["<<i>>"]:";
		getline(cin, alumnos[i]);
	}
}
void burbuja(int notas[],string alumnos[],int n)
{
	void notasaux;
	for (i=0;i<n;i++)
		for (int j=i+1;j<n;j++)
		{
		   notasaux=notas[j];
		   notas[j]=notas[i];
		   notas[i]=notasaux;
		   //array paralelo
		   alumnosaux=alumnos[j];
		   alumnos[j]=alumnos[i];
		   alumnos[i]=alumnosaux;
		}
{
void mostrarvectores(int notas[],string alumnos[],int n);
{
	for (i=0;i<n;i++)
		cout<<alumnos[i]<<"\t"<<notas[i]<<endl;
}
