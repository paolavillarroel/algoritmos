#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main()
{
	int edad, genero, hijos;
	cout<<"ingrese el genero, 1 para masculino, 2 para femenino:";
	cin>>genero;
	cout<<"ingrese la edad";
	cin>>edad;
	if (genero==1)  
	{if (edad>=65)
	cout<<"puede jubilarse";
	else
		cout<<"no tiene la edad suficiente";
	}
	else
	{cout<<"cuantos hijos tiene?:";
	cin>>hijos;
	  if (edad>=(60-hijos))
		  cout<<"se puede jubilar";
	  else
		  cout<<"no tiene la edad suficiente";
	}
	getch();
}
