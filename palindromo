#include "stdafx.h"
#include <iostream>
#include <string>
using namespace std;

bool palindromo (string C)
{
	bool k=true;
	int l=C.length() , i;
	for(i=0;i<(l/2);i++)
	{
		if (C[i]!= C[l-1-i])
		{
			k=false;
			return k;
		}
	}
	return k;
}
int main()
{
	string C;
    bool k=false;
    cout<<"ingrese la cadena : ";
    getline (cin , C);
    k=palindromo (C);
    if (k==true)
	   cout<<"Es Palindromo ";

    else 
	cout<<"No es Palindromo" ;

	return 0;
}
